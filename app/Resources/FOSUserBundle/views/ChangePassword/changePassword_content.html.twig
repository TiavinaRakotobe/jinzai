<div  style="width:50%;margin-left: 20%">
    <!-- /.login-logo -->
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading" style="text-align: center;">Changement de mot de passe</div>
            <div class="panel-body">
                <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                    <div class="form">

                        <div class="form-group">
                            {{ form_label(form.current_password, "Mot de passe actuel") }}
                            {{ form_widget(form.current_password, {'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.current_password) }}

                        </div>

                        <div class="form-group">
                            {{ form_label(form.new.first, "Nouveau mot de passe") }}
                            {{ form_widget(form.new.first, {'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.new.first) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.new.second, "Confirmer mot nouveau mot de passe") }}
                            {{ form_widget(form.new.second, {'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.new.second) }}
                        </div>
                        {{ form_widget(form._token) }}
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Changer mot de passe</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /.login-box-body -->