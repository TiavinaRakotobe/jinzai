{% extends "FOSUserBundle::layout.html.twig" %}
{% block body %}
    {% block fos_user_content %}
        <body class="hold-transition login-page">
            <div class="login-box" style="width:30%;">
                <div class="login-logo">
                    <a href="javascript:/"><b>{{ app_name }}</b></a>
                </div>
                <!-- /.login-logo -->
                <div class="login-box-body">
                    <p class="login-box-msg">
                        {% if error %}
                            <span style="color:red;">{{ error|trans({}, 'FOSUserBundle') }}</span>
                        {% else %}
                            DÃ©marrer votre session
                        {% endif %}
                    </p>
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group has-feedback">
                            <input type="text" class="form-control" placeholder="Email ou nom d'utilisateur" id="username" name="_username" value="{{ last_username }}" required="required"/>
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" class="form-control" placeholder="Mot de passe" id="password" name="_password" required="required"/>
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label>
                                        <input class="icheck" type="checkbox" id="remember_me" name="_remember_me" value="on" />&nbsp;&nbsp;Se souvenir de moi
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Se connecter</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                    <!--a href="#">I forgot my password</a><br>
                    <a href="register.html" class="text-center">Register a new membership</a-->
                </div>
                <!-- /.login-box-body -->
            </div>
        </body>
    {% endblock fos_user_content %}
{% endblock body %}
